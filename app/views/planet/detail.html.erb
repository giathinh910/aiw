<header id="gt-header" class="<%= @header %>">
	<h1 class="site-title"><a href="#<%= @planet.name %>"><%= @planet.name %></a></h1>
</header>

<section id="gt-fact" class="gt-section">

	<div class="planet-avatar">
		<img src="<%= @planet.avatar %>" alt="">
	</div>

	<ol class="breadcrumb">
		<li><a href="/">Trang chủ</a></li>
		<li><%= link_to "Dữ liệu hệ mặt trời", planets_path %></li>
		<li><%= @planet.name %></li>
	</ol>

	<div class="gt-section-content">
		<div class="entry-single">
			<div class="entry-table">
				<div class="table-responsive">
					<table class="table">
					<!-- <caption>Optional table caption.</caption> -->
					<thead>
						<tr>
							<th colspan="2"><span class="table-title">THÔNG SỐ</span></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>Tên gọi</td>
							<td><%= @planet.name %></td>
						</tr>
						<tr>
							<td>Khối lượng (10<sup>24</sup> kg)</td>
							<td><%= @planet.mass %></td>
						</tr>
						<tr>
							<td>Đường kính (km)</td>
							<td><%= @planet.diameter %></td>
						</tr>
						<tr>
							<td>Độ đặc (kg/m<sup>3</sup>)</td>
							<td><%= @planet.density %></td>
						</tr>
						<tr>
							<td>m/s<sup>2</sup></td>
							<td><%= @planet.gravity %></td>
						</tr>
						<tr>
							<td>Vận tốc thoát khỏi lực hấp dẫn (km/s)</td>
							<td><%= @planet.escape_velocity %></td>
						</tr>
						<tr>
							<td>Chu kỳ tự quay (h)</td>
							<td><%= @planet.rotation_period %></td>
						</tr>
						<tr>
							<td>Độ dài ngày (h)</td>
							<td><%= @planet.day_lenght %></td>
						</tr>
						<tr>
							<td>K/c tới mặt trời (10<sup>6</sup> km)</td>
							<td><%= @planet.distance_from_sun %></td>
						</tr>
						<tr>
							<td>Điểm cận nhật (10<sup>6</sup> km)</td>
							<td><%= @planet.perihelion %></td>
						</tr>
						<tr>
							<td>điểm viễn nhật (10<sup>6</sup> km)</td>
							<td><%= @planet.aphelion %></td>
						</tr>
						<tr>
							<td>Chu kỳ quay quanh mặt trời (ngày)</td>
							<td><%= @planet.orbital_period %></td>
						</tr>
						<tr>
							<td>Vận tốc quỹ đạo  (km/s)</td>
							<td><%= @planet.orbital_velocity %></td>
						</tr>
						<tr>
							<td>Độ nghiêng quỹ đạo (độ)</td>
							<td><%= @planet.orbital_Inclination %></td>
						</tr>
						<tr>
							<td>Độ nghiêng trục (độ)</td>
							<td><%= @planet.axis_inclination %></td>
						</tr>
						<tr>
							<td>Khối lượng</td>
							<td><%= @planet.weight %></td>
						</tr>
						<tr>
							<td>Nhiệt độ (C)</td>
							<td><%= @planet.temperature %></td>
						</tr>
						<tr>
							<td>Áp suất khí quyển bề mặt (atm)</td>
							<td><%= @planet.surface_pressure %></td>
						</tr>
						<tr>
							<td>Thành phần khí quyển</td>
							<td><%= @planet.atmospheric_composition %></td>
						</tr>
						<tr>
							<td>Có vành?</td>
							<td><%= @planet.ring %></td>
						</tr>
						<tr>
							<td>Số vệ tinh</td>
							<td><%= @planet.satellite %></td>
						</tr>
					</tbody>
					</table>

					<table class="table">
						<thead>
							<tr>
								<th><span class="table-title">VỆ TINH</span></th>
								<th><%= link_to 'Xem bảng so sánh', { :controller => "satellite", :action => "all", :id => @planet } %></th>
							</tr>
						</thead>
						<tbody>
							<% @planet.satellites.each do |satellite| %>
							<tr>
								<td><%= satellite.id %></td>
								<td>
									<%= satellite.name %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>

				</div>
			</div>
			<div class="entry-content">
				<%=raw @planet.detail %>
			</div>
		</div>
	</div>
</section>