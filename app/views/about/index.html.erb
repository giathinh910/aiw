<div class="container">
	<ol class="breadcrumb" style="margin-top: 100px;">
		<li><a href="/">Trang chủ</a></li>
		<li>Giới thiệu, thông tin</li>
	</ol>
</div>

<section id="gt-author" class="gt-section">
	<div class="container">
		<div class="row">
			<% @authors.each do |author| %>
			<div class="entry">
				<div class="entry-media">
					<div class="social">
						<a href="<%= author.social_facebook %>" class="fa fa-facebook"></a>
						<a href="<%= author.social_twitter %>" class="fa fa-twitter"></a>
						<a href="<%= author.social_gplus %>" class="fa fa-google-plus"></a>
					</div>
					<img src="<%= author.avatar %>" alt="">
				</div>
				<div class="entry-content">
					<h3><%= author.name %></h3>
					<p><%= author.role %></p>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</section>